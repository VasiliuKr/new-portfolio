							li.skills__item
								input(type="text" value="80" class='dial')
								span.dial-text CSS3
							li.skills__item
								input(type="text" value="60" class='dial')
								span.dial-text JavaScript & jQuery
						.skills__title Backend
						ul.skills__list
							li.skills__item
								input(type="text" value="20" class='dial')
								span.dial-text PHP
							li.skills__item
								input(type="text" value="20" class='dial')
								span.dial-text mySQL
							li.skills__item
								input(type="text" value="50" class='dial')
								span.dial-text Node.js & npm
							li.skills__item
								input(type="text" value="20" class='dial')
								span.dial-text Mongo.db
						.skills__title Workflow
						ul.skills__list
							li.skills__item
								input(type="text" value="60" class='dial')
								span.dial-text Git
							li.skills__item
								input(type="text" value="70" class='dial')
								span.dial-text Gulp
							li.skills__item
								input(type="text" value="70" class='dial')
								span.dial-text Bower
